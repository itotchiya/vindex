// Site Footer
---

<footer class="site-footer">
  <div class="footer-bg"></div>
  <div class="container">
    <div class="footer-grid">
      <div class="footer-col brand-col">
        <h3 class="footer-title">VINDEX</h3>
        <p class="tagline">
          Défendre les droits.<br />
          Maîtriser la procédure.
        </p>
      </div>

      <div class="footer-col">
        <h4 class="footer-heading">Navigation</h4>
        <nav>
          <ul class="footer-nav">
            <li><a href="/">Accueil</a></li>
            <li><a href="/cabinet">Le Cabinet</a></li>
            <li><a href="/domaines">Domaines d'activité</a></li>
            <li><a href="/actualites">Actualités</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </nav>
      </div>

      <div class="footer-col domains-col">
        <h4 class="footer-heading">Domaines d'intervention</h4>
        <nav>
          <ul class="footer-nav">
            <li>
              <a href="/domaines/contentieux-photovoltaique"
                >Contentieux photovoltaïque</a
              >
            </li>
            <li>
              <a href="/domaines/postulation-appel">Postulation en appel</a>
            </li>
            <li>
              <a href="/domaines/procedure-participative"
                >Procédure participative</a
              >
            </li>
          </ul>
        </nav>
      </div>

      <div class="footer-col">
        <h4 class="footer-heading">Contact</h4>
        <div class="info-blocks">
          <div class="info-item">
            <span class="info-label">Adresse</span>
            <address class="info-value">
              VINDEX – Avocats<br />
              <a
                class="link-bold"
                href="https://www.google.com/maps/search/?api=1&query=15+quai+Auguste+Bertin+59500+Douai"
                target="_blank"
                rel="noopener noreferrer"
              >
                15 quai Auguste Bertin<br />
                59500 Douai
              </a>
            </address>
          </div>

          <div class="info-item">
            <span class="info-label">Téléphone</span>
            <a class="link-bold" href="tel:0366722525">03 66 72 25 25</a>
          </div>

          <div class="info-item">
            <span class="info-label">Email</span>
            <a class="link-bold" href="mailto:contact@vindex-avocats.fr"
              >contact@vindex-avocats.fr</a
            >
          </div>

          <div class="info-item">
            <span class="info-label">Horaires</span>
            <p class="info-value">
              Du lundi au vendredi<br />
              9h00 – 12h30 / 14h00 – 18h00
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">© 2026 VINDEX – Avocats. Tous droits réservés.</p>
      <nav>
        <ul class="footer-legal">
          <li><a href="/mentions-legales">Mentions légales</a></li>
        </ul>
      </nav>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    position: sticky;
    bottom: 0;
    background-color: #08110f;
    color: #f5f5f5;
    padding: 80px 0 40px;
    z-index: 0;
    overflow: hidden;
  }

  .footer-bg {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 1440px;
    height: 100%;
    background-image: url("/hero-bg.avif");
    background-size: cover;
    background-position: center;
    opacity: 0.8;
    z-index: 1;
  }

  .container {
    position: relative;
    z-index: 3;
    max-width: 1392px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 60px;
    margin-bottom: 60px;
  }

  .brand-col {
    padding-right: 40px;
  }

  .footer-title {
    font-family: var(--font-sans);
    font-size: 1.8rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 16px;
    letter-spacing: 0.02em;
  }

  .tagline {
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 300;
    font-style: normal;
  }

  .footer-heading {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    margin-bottom: 20px;
    font-weight: 600;
  }

  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-nav a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 300;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: var(--color-primary);
  }

  .info-blocks {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .info-label {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    font-weight: 600;
  }

  .info-value {
    font-style: normal;
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 300;
    margin: 0;
  }

  .info-value a,
  .link-bold {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .info-value a:hover,
  .link-bold:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    padding-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  .footer-legal {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 24px;
  }

  .footer-legal a {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-legal a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .brand-col {
      grid-column: 1 / -1;
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 40px 0 24px;
    }

    .container {
      padding: 0 24px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 48px;
      margin-bottom: 24px;
    }

    .domains-col {
      display: none;
    }

    .footer-heading {
      margin-bottom: 12px;
    }

    .footer-nav {
      gap: 8px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 12px;
      text-align: center;
      padding-top: 24px;
    }
  }
</style>
