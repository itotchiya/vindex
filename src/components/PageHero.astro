---
import { ChevronRight } from "lucide-astro";

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  title: string;
  description: string;
  bgImage?: string;
  breadcrumbs?: BreadcrumbItem[];
}

const {
  title,
  description,
  bgImage = "/hero-bg.avif",
  breadcrumbs,
} = Astro.props;

// Default breadcrumb logic if none provided
const currentPath = Astro.url.pathname;
const path = currentPath.replace(/\/$/, "");
const pageName = path.split("/").pop() || "";

const formatBreadcrumb = (str: string) => {
  if (!str) return "Accueil";
  return str.charAt(0).toUpperCase() + str.slice(1).replace(/-/g, " ");
};

// Use custom breadcrumbs if provided, otherwise generate default
const breadcrumbItems: BreadcrumbItem[] = breadcrumbs || [
  { label: formatBreadcrumb(pageName) },
];
---

<section class="page-hero">
  <div class="hero-bg" style={`background-image: url('${bgImage}')`}></div>
  <div class="hero-overlay"></div>

  <div class="hero-container">
    <div class="breadcrumbs">
      <a href="/" class="crumb-link">Accueil</a>
      {
        breadcrumbItems.map((crumb, index) => (
          <>
            <ChevronRight class="crumb-icon" size={14} />
            {crumb.href && index < breadcrumbItems.length - 1 ? (
              <a href={crumb.href} class="crumb-link">
                {crumb.label}
              </a>
            ) : (
              <span class="crumb-current">{crumb.label}</span>
            )}
          </>
        ))
      }
    </div>

    <div class="hero-content">
      <h1 class="text-h1">{title}</h1>

      <p class="body1 description">
        {description}
      </p>
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: sticky;
    top: 0;
    width: 100%;
    height: 70vh; /* Shorter height for sub-pages */
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #08110f;
    color: #f5f5f5;
    overflow: hidden;
    padding: 24px;
    z-index: 0;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 1440px;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0.6;
    z-index: 1;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(8, 17, 15, 0.3),
      rgba(8, 17, 15, 0.8)
    );
    z-index: 2;
  }

  .hero-container {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 48px;
  }

  /* Breadcrumbs */
  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: -16px; /* Pull tighter to content */
  }

  .crumb-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .crumb-link:hover {
    color: var(--color-primary);
  }

  .crumb-icon {
    opacity: 0.4;
  }

  .crumb-current {
    color: var(--color-primary);
    font-weight: 500;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    max-width: 900px;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    line-height: 1;
    margin: 0;
    letter-spacing: -0.04em;
    color: #ffffff;
  }

  .description {
    max-width: 60ch;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .page-hero {
      height: auto;
      min-height: 500px;
      padding: 120px 16px 64px;
    }

    .hero-container {
      gap: 32px;
    }

    h1 {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  /**
   * Page Hero Scroll Animations
   * Uses the reusable scrollAnimations module for:
   * - Hero content entrance animations (staggered fade-in)
   * - Breadcrumb entrance animation
   * - Parallax scroll effect on hero container
   *
   * Required CSS classes:
   * - .hero-content > * : Content elements with staggered entrance
   * - .breadcrumbs : Breadcrumb navigation
   * - .hero-container : Parallax target
   * - .hero-bg : Background element (required for parallax check)
   */
  import { initPageHeroAnimations } from "../scripts/scrollAnimations.js";
  initPageHeroAnimations();
</script>
