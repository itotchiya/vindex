---
import Button from "./ui-kit/Button.astro";
import ContentHeader from "./ui-kit/ContentHeader.astro";
import { MapPin } from "lucide-astro";
---

<section class="final-cta">
  <div class="container">
    <div class="cta-content">
      <ContentHeader
        eyebrow="Contact"
        title="Contacter le cabinet"
        description="Le cabinet VINDEX reçoit exclusivement sur rendez-vous. Un premier échange permet d'orienter utilement la demande et d'apprécier les suites à y donner."
      />

      <div class="cta-buttons">
        <Button href="/contact" variant="primary"> Prendre rendez-vous </Button>
        <Button href="/domaines/postulation-appel" variant="secondary">
          Postulation en appel – Cour d'appel de Douai
        </Button>
      </div>

      <div class="micro-info">
        <MapPin width={16} height={16} />
        <span>Cabinet situé à Douai</span>
      </div>
    </div>
  </div>
</section>

<style>
  .final-cta {
    position: relative;
    padding: 128px 24px;
    background-color: #ffffff;
    z-index: 10;
  }

  .container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0;
  }

  .cta-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    margin-top: 16px;
  }

  .micro-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: rgba(var(--color-text-main-rgb), 0.6);
    margin-top: 8px;
  }

  @media (max-width: 768px) {
    .final-cta {
      padding: 64px 16px;
    }

    .container {
      padding: 0;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }
  }
</style>
