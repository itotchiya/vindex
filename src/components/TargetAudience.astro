---
import ContentHeader from "./ui-kit/ContentHeader.astro";
import Button from "./ui-kit/Button.astro";
import { ArrowRight } from "lucide-astro";

const audiences = [
  {
    label: "Consumers",
    title: "Défense des consommateurs",
    description:
      "Le cabinet accompagne les particuliers confrontés à des opérations contractuelles irrégulières, notamment en matière de panneaux photovoltaïques financés par crédit affecté.",
  },
  {
    label: "Lawyers",
    title: "Avocats plaidants",
    description:
      "Activité dédiée de postulation en appel devant la Cour d'appel de Douai, au service des confrères.",
  },
  {
    label: "Legal professionals",
    title: "Professionnels du droit",
    description:
      "Mise en œuvre de conventions de procédure participative et accompagnement procédural.",
  },
];
---

<section class="target-audience">
  <div class="container">
    <div class="left-section">
      <div class="left-content">
        <ContentHeader
          theme="dark"
          eyebrow="Public cible"
          title="À qui s'adresse"
          titleSecondLine="le cabinet VINDEX"
          description="Le cabinet intervient auprès de trois types de clientèle, avec une approche adaptée à chaque public."
        />

        <div class="actions">
          <Button href="/domaines" variant="primary" class="custom-btn">
            Découvrir les domaines d'activité
            <ArrowRight class="btn-icon" width={18} height={18} />
          </Button>
        </div>
      </div>
    </div>

    <div class="right-section">
      <div class="audience-grid">
        {
          audiences.map((audience) => (
            <div class="audience-card">
              <span class="audience-label">{audience.label}</span>
              <h3 class="audience-title">{audience.title}</h3>
              <p class="audience-description">{audience.description}</p>
              <div class="separator-line" role="presentation" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .target-audience {
    min-height: 100vh;
    background-color: #08110f;
    color: #f5f5f5;
    position: relative;
    padding: 24px;
  }

  .container {
    max-width: 1440px;
    width: 100%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    min-height: 100vh;
  }

  .left-section {
    position: sticky;
    top: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: start;
  }

  .left-content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .right-section {
    display: flex;
    align-items: center;
    padding: 0;
  }

  .audience-grid {
    display: flex;
    flex-direction: column;
    gap: 48px; /* Slightly reduced gap */
    width: 100%;
  }

  .audience-card {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 24px;
    cursor: pointer;
    position: relative;
  }

  .separator-line {
    width: 100%;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.08); /* Faded default state */
    margin-top: 16px;
    transition: background-color 0.4s ease;
  }

  .audience-card:hover .separator-line {
    background-color: var(--color-primary); /* Primary color on hover */
  }

  .audience-label {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 500;
  }

  .audience-title {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 400;
    font-style: italic;
    line-height: 1.3;
    color: #ffffff;
  }

  .audience-description {
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.75);
    font-weight: 300;
  }

  .actions {
    margin-top: 40px;
  }

  .custom-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .btn-icon {
    transition: transform 0.3s ease;
  }

  .custom-btn:hover .btn-icon {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .container {
      grid-template-columns: 1fr;
      gap: 60px;
      min-height: auto;
      padding: 60px 32px;
    }

    .left-section {
      position: relative;
      height: auto;
    }

    .right-section {
      padding: 0;
    }

    .target-audience {
      min-height: auto;
    }
  }

  @media (max-width: 768px) {
    .target-audience {
      padding: 64px 16px;
    }

    .container {
      padding: 0;
      gap: 4rem;
    }

    .audience-grid {
      gap: 32px;
    }

    .audience-title {
      font-size: 1.5rem;
    }

    .audience-description {
      font-size: 1rem;
    }

    .custom-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
