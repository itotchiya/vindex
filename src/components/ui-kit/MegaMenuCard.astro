---
interface Props {
  href: string;
  image: string;
  title: string;
  alt?: string;
}

const { href, image, title, alt = title } = Astro.props;
---

<a href={href} class="mega-card">
  <div class="mega-card-image">
    <img src={image} alt={alt} />
  </div>
  <div class="mega-card-content">
    <h4>{title}</h4>
  </div>
</a>

<style>
  .mega-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    border-radius: 8px;
    overflow: hidden;
    opacity: 1 !important; /* Override global a:hover opacity */
    box-shadow: 0 8px 24px rgba(71, 71, 71, 0.08);
  }

  .mega-card:hover {
    opacity: 1 !important; /* Ensure no opacity change on hover */
  }

  :global(header[data-theme="dark"]) .mega-card,
  :global(.mega-menu[data-theme="dark"]) .mega-card {
    background: rgba(255, 255, 255, 1);
  }

  :global(header[data-theme="light"]) .mega-card,
  :global(.mega-menu[data-theme="light"]) .mega-card {
    background: rgba(255, 255, 255, 1);
  }

  .mega-card-image {
    width: 100%;
    height: 260px;
    overflow: hidden;
  }

  .mega-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .mega-card:hover .mega-card-image img {
    transform: scale(1.04);
  }

  .mega-card-content {
    padding: 32px;
    text-align: center;
  }

  .mega-card-content h4 {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0;
  }

  :global(header[data-theme="dark"]) .mega-card-content h4,
  :global(.mega-menu[data-theme="dark"]) .mega-card-content h4 {
    color: #08110f;
  }

  :global(header[data-theme="light"]) .mega-card-content h4,
  :global(.mega-menu[data-theme="light"]) .mega-card-content h4 {
    color: #08110f;
  }

  @media (max-width: 768px) {
    .mega-card-image {
      height: 100px;
    }

    .mega-card-content {
      padding: 12px;
    }

    .mega-card-content h4 {
      font-size: 0.9rem;
    }
  }
</style>
