---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import PageHero from "../components/PageHero.astro";
import FAQSection from "../components/FAQSection.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Contact | VINDEX – Avocats">
  <Header />

  <main>
    <div class="hero-wrapper">
      <PageHero
        title="S'interposer pour vous défendre"
        description="Le cabinet reçoit exclusivement sur rendez-vous. Pour toute demande d'intervention ou de postulation, vous pouvez nous contacter via les coordonnées ci-dessous ou le formulaire dédié."
      />
      <!-- Contact Info & Form (moved inside wrapper for overlap effect if desired, or kept outside if standard sticking? 
           Based on index.astro, Hero is first, CabinetPreview (next section) is second inside wrapper.
           So we should put the next section inside here IF we want it to slide OVER the sticky hero.) 
      -->

      <!-- Contact Info & Form -->
      <section class="section-contact">
        <div class="container">
          <div class="contact-grid">
            <!-- Contact Information -->
            <div class="contact-info">
              <h2 class="section-title">Coordonnées</h2>

              <div class="info-blocks">
                <div class="info-item">
                  <span class="info-label">Adresse</span>
                  <address class="info-value">
                    VINDEX – Avocats<br />
                    <a
                      class="link-bold"
                      href="https://www.google.com/maps/search/?api=1&query=2+rue+Kellermann+59100+Roubaix"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      15 quai Auguste Bertin<br />
                      59500 Douai
                    </a>
                  </address>
                </div>

                <div class="info-item">
                  <span class="info-label">Téléphone</span>
                  <a class="link-bold" href="tel:+33123456789">03 66 72 25 25</a
                  >
                </div>

                <div class="info-item">
                  <span class="info-label">Email</span>
                  <a class="link-bold" href="mailto:contact@vindex-avocats.fr"
                    >contact@vindex-avocats.fr</a
                  >
                </div>

                <div class="info-item">
                  <span class="info-label">Horaires</span>
                  <p class="info-value">
                    Du lundi au vendredi<br />
                    9h00 – 12h30 / 14h00 – 18h00
                  </p>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <ContactForm />
          </div>
        </div>
      </section>
    </div>

    <!-- Removed separate section-contact declaration since it is now inside wrapper -->

    <div class="footer-wrapper">
      <FAQSection />
      <Footer />
    </div>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-wrapper {
    background-color: #08110f;
    color: #ffffff;
    /* padding-top: 80px;  Removed padding-top; PageHero should handle its own top spacing if needed, or stick to top 0 */
    position: relative; /* Essential for interaction */
  }

  /* .page-hero styles removed */

  .section-contact {
    padding: 128px 24px;
    background-color: #ffffff;
    position: relative; /* Ensure it creates a stacking context */
    z-index: 1; /* Slide OVER the sticky hero (PageHero is z:0) */
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 96px;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 48px;
    color: var(--color-text-main);
  }

  .info-blocks {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .info-label {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    font-weight: 500;
  }

  .info-value {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgba(var(--color-text-main-rgb), 0.8);
  }

  .info-value a {
    transition: color 0.3s ease;
  }

  .info-value a:hover {
    color: var(--color-primary);
  }

  .link-bold {
    width: fit-content;
    font-weight: 700;
    color: var(--color-text-main);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
    text-decoration-color: rgba(var(--color-text-main-rgb), 0.2);
    transition: all 0.2s ease;
  }

  .link-bold:hover {
    color: var(--color-primary);
    text-decoration-color: var(--color-primary);
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 64px;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 120px 16px 64px;
    }

    .section-contact {
      padding: 64px 16px;
    }

    .section-contact {
      padding: 64px 16px;
    }
  }

  /* Wrapper for reverse sticky footer effect */
  .footer-wrapper {
    position: relative;
    /* height: 200vh; Extra height for scroll effect */
  }
</style>
