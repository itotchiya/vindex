---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import ContentHeader from "../components/ui-kit/ContentHeader.astro";
import FinalCTA from "../components/FinalCTA.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Mentions légales | VINDEX – Avocats">
  <Header />

  <main>
    <div class="hero-wrapper">
      <section class="page-hero">
        <div class="container">
          <ContentHeader
            theme="dark"
            eyebrow="Transparence"
            title="Mentions Légales"
            description="Informations réglementaires concernant l'éditeur, l'hébergement et la protection de vos données personnelles."
          />
        </div>
      </section>
    </div>

    <!-- Content -->
    <section class="section-content">
      <div class="container--narrow">
        <div class="mentions-grid">
          <!-- Éditeur -->
          <article class="mentions-block">
            <h2 class="block-title">Éditeur du site</h2>
            <div class="info-list">
              <div class="info-item">
                <span class="label">Dénomination :</span>
                <span class="value">VINDEX – Avocats</span>
              </div>
              <div class="info-item">
                <span class="label">Forme :</span>
                <span class="value">SELAS – Avocats</span>
              </div>
              <div class="info-item">
                <span class="label">Siège social :</span>
                <span class="value">123 Rue de la Justice, 59500 Douai</span>
              </div>
              <div class="info-item">
                <span class="label">Contact :</span>
                <span class="value">contact@vindex-avocats.fr</span>
              </div>
            </div>
          </article>

          <!-- Directeur de publication -->
          <article class="mentions-block">
            <h2 class="block-title">Directeur de publication</h2>
            <p class="text">
              Maître [Nom du dirigeant], Avocat au Barreau de Douai.
            </p>
          </article>

          <!-- Hébergement -->
          <article class="mentions-block">
            <h2 class="block-title">Hébergement</h2>
            <p class="text">
              Ce site est hébergé par [Nom de l'hébergeur], situé au [Adresse],
              joignable au [Téléphone].
            </p>
          </article>

          <!-- Propriété -->
          <article class="mentions-block">
            <h2 class="block-title">Propriété Intellectuelle</h2>
            <p class="text">
              L'ensemble du contenu de ce site (textes, images, graphismes,
              logo) est la propriété exclusive du cabinet VINDEX – Avocats.
              Toute reproduction, même partielle, est interdite sans accord
              écrit préalable.
            </p>
          </article>

          <!-- Données -->
          <article class="mentions-block">
            <h2 class="block-title">Données Personnelles</h2>
            <p class="text">
              Conformément au RGPD, vous disposez d'un droit d'accès, de
              rectification et d'opposition aux données vous concernant en
              contactant le cabinet à l'adresse contact@vindex-avocats.fr.
            </p>
          </article>
        </div>
      </div>
    </section>

    <div class="footer-wrapper">
      <FinalCTA />
      <Footer />
    </div>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }

  .hero-wrapper {
    background-color: #08110f;
    color: #ffffff;
    padding-top: 80px;
  }

  .page-hero {
    padding: 128px 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-content {
    padding: 128px 24px;
    background-color: #ffffff;
  }

  .container--narrow {
    max-width: 800px;
    margin: 0 auto;
  }

  .mentions-grid {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  .block-title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 32px;
    color: var(--color-primary);
  }

  .info-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .info-item {
    display: flex;
    justify-content: space-between;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(var(--color-text-main-rgb), 0.05);
  }

  .label {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(var(--color-text-main-rgb), 0.4);
  }

  .value {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    color: var(--color-text-main);
  }

  .text {
    font-family: var(--font-serif);
    font-size: 1.15rem;
    line-height: 1.7;
    color: rgba(var(--color-text-main-rgb), 0.8);
  }

  .footer-wrapper {
    position: relative;
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 120px 16px 64px;
    }

    .section-content {
      padding: 64px 16px;
    }

    .mentions-grid {
      gap: 64px;
    }

    .info-item {
      flex-direction: column;
      gap: 4px;
    }
  }
</style>
